// This file enables intellisense and type checking in IDEs for plain JS files in prototypes/, without requiring a build step.
{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"paths": {
			"bmesh": ["../src/index.js"],
			"bmesh/*": ["../*"]
		},

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["./**/*"]
}
